<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALCULATOR"
        android:textAlignment="center"
        android:textColor="#020000"
        android:textSize="40sp"
        android:textStyle="bold" />
    <TextView
        android:gravity="center"
        android:id="@+id/txtNumber"
        android:background="#D4F7D4"
        android:text="0"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:textAlignment="textEnd"
        android:layout_gravity="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal">

        <Button

            android:text="Clear"
            android:tag="Clear"
            android:layout_marginTop="15dp"
            android:background="@color/colorDefault"
            android:onClick="clearClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="90dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorDefault"
            android:onClick="backClick"
            android:tag="Back"
            android:textSize="20sp"
            android:text="Back" />

        <Button
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorDefault"
            android:onClick="operatorClick"
            android:tag="/"
            android:text="/"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="90dp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="@color/colorDefault"
            android:onClick="digitClick"
            android:tag="1"
            android:text="1"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"
            />

        <Button
            android:layout_marginLeft="5dp"
            android:background="@color/colorDefault"
            android:onClick="digitClick"
            android:tag="2"
            android:text="2"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"/>

        <Button
            android:background="@color/colorDefault"
            android:onClick="digitClick"
            android:tag="3"
            android:text="3"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"/>


        <Button
            android:background="@color/colorDefault"
            android:onClick="operatorClick"
            android:tag="*"
            android:textSize="20sp"
            android:text="*"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="@color/colorDefault"
            android:onClick="digitClick"
            android:tag="4"
            android:text="4"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"/>


        <Button
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"
            android:textSize="20sp"
            android:background="@color/colorDefault"
            android:onClick="digitClick"
            android:tag="5"
            android:text="5"/>

        <Button android:text="6"
            android:background="@color/colorDefault"
            android:tag="6"
            android:onClick="digitClick"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="85dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorDefault"
            android:onClick="operatorClick"
            android:tag="-"
            android:textSize="20sp"
            android:text="-" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:text="7"
            android:background="@color/colorDefault"
            android:tag="7" android:onClick="digitClick"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="85dp"/>

        <Button
            android:text="8"
            android:background="@color/colorDefault"
            android:tag="8" android:onClick="digitClick"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="85dp"/>

        <Button
            android:text="9"
            android:background="@color/colorDefault"
            android:tag="9" android:onClick="digitClick"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorDefault"
            android:onClick="operatorClick"
            android:textSize="20sp"
            android:tag="+"
            android:text="+" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" android:orientation="horizontal">

        <Button

            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:background="@color/colorDefault"
            android:text="0" android:tag="0"
            android:onClick="digitClick"
            android:textSize="20sp"
            />

        <Button
            android:text="." android:tag="."
            android:background="@color/colorDefault"
            android:onClick="dotClick"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"
            android:textSize="20sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="85dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorDefault"
            android:onClick="equalClick"
            android:textSize="20sp"
            android:tag="="
            android:text="=" />
    </LinearLayout>

</LinearLayout>