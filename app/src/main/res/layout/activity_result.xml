<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ResultFragment"
    android:background="@drawable/result">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorStat"

        android:id="@+id/topstatis"/>


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topstatis"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="55dp"
        android:text="Answered Questions:"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="#1200FF"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:fontFamily="monospace"
        android:textColor="@color/colorGreen"
        android:text="Correct Answers:"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="55dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:fontFamily="monospace"
        android:textColor="@color/colorRed"
        android:text="Wrong Answers:"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="55dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView1"
        android:layout_below="@+id/topstatis"
        android:layout_marginTop="55dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="#1200FF"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="55dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="@color/colorGreen"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="55dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="@color/colorRed"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="0"/>
<LinearLayout
    android:layout_below="@+id/textView3"
    android:layout_marginTop="40dp"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/power"
        android:padding="10dp"
        android:drawableLeft="@drawable/power"
        android:text="   Exit"
        android:background="@drawable/btn_bg"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

</RelativeLayout>