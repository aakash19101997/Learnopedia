<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/signinback">



    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/back"
            android:textColor="#ffffff"
             />


        <EditText
        android:textColor="@color/colorLight"
        android:textColorHint="@color/colorLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number(use +91)"
        android:id="@+id/phoneNumber"
        android:inputType="phone"

        />
    <Button
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verificationButton"
        android:text="Get Verification Code"
        style="?android:attr/borderlessButtonStyle"/>
    <EditText
        android:textColor="@color/colorLight"
        android:textColorHint="@color/colorLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Code received"
        android:id="@+id/codeReceived"/>
    <Button
        android:textColor="#ffffff"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSignIn"
        android:text="Sign In"/>

        <TextView
            android:id="@+id/tv1"
            android:clickable="true"
            android:layout_marginTop="35dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Sign in with email and password"/>
    </LinearLayout>




</RelativeLayout>